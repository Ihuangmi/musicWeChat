/* pages/playSong/playSong.wxss */

page {
  height: 100%;
}

.name {
  padding: 50rpx;
  text-align: center;
  font-size: 40rpx;
  color: rgb(231, 231, 231)
}

.pic {
  margin-left: 175rpx;
  height: 400rpx;
  width: 400rpx;
  border: 100rpx;
  border-radius: 200rpx;
}

.body {
  height: 100%;
  background: linear-gradient(rgb(129, 136, 127), black);
}

.slider {
  margin-top: -20rpx;
  background: rgb(51, 51, 51)y;
  color: white;
  border-radius: 20rpx;
  display: flex;
  flex-wrap: wrap;
  align-items: center;
}

.slider>slider {
  width: 60%;
}

.button {
  height: 40rpx;
  color: white;
  align-items: center;
  margin: auto;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}

.button>image {
  margin-top: -20rpx;
  height: 100rpx;
  width: 100rpx;
}

.lyric {
  padding: 50rpx 0;
  text-align: center;
}

scroll-view {
  height: 350rpx;
  color: rgb(155, 155, 155);
  position: relative;
}

.lyric_item {
  font-size: 30rpx;
  margin: 20rpx 0;
}

.active {
  font-size: 40rpx;
  color: white;
}
